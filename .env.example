# n8n Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=user
N8N_BASIC_AUTH_PASSWORD=password

# Database Configuration - Railway provides these automatically
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=${{PGHOST}}
DB_POSTGRESDB_DATABASE=${{PGDATABASE}}
DB_POSTGRESDB_USER=${{PGUSER}}
DB_POSTGRESDB_PASSWORD=${{PGPASSWORD}}
DB_POSTGRESDB_PORT=${{PGPORT}}

# n8n Configuration
NODE_FUNCTION_ALLOW_EXTERNAL=pg
WEBHOOK_URL=https://your-railway-app-name.up.railway.app
N8N_METRICS=true
N8N_ENCRYPTION_KEY=your-random-encryption-key
TZ=UTC

# Railway specific
PORT=5678
RAILWAY_STATIC_URL=true 